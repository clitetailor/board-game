@import "styles.styl"

$tea-green = #c9da7b
$smooth-line = lighten(#000, 75)

.Entrance
    width 100%
    height 100%

    .navbar
        position fixed
        left 0
        right 0
        top 0

        height 60px
        box-shadow $box-shadow-primary

        background gold

        .brand
            .brand-typo
                margin-left 20px;

                position relative
                font-family 'Lobster 1.3'
                font-size 45px
                color $font-smooth
    
        
    .outer-wrapper
        display flex
        flex-direction column
        align-items center
        justify-content space-between

        padding-top 60px
        width 100%
        height 100%

        box-sizing border-box

        background gold

        .content
            display flex
            flex-flow column nowrap
            align-items stretch
            min-width 800px

            .top-control
                background white
                box-shadow  0 1px 3px white

                padding 20px
                margin 12px

                border-radius 8px

                display flex
                align-items center
                justify-content space-around

            .pallete
                display flex
                justify-content center
                flex-flow row wrap

                .card
                    min-height 80px
                    background white
                    box-shadow 0 1px 3px white

                    margin 12px
                    padding 20px

                    border-radius 8px
                    
                .rooms
                    min-width 300px
                    flex 4 1 0%

                    .room
                        .banner
                            display flex
                            font-family Lato
                            color $font-smooth

                            h3
                                margin 0

                            .room-id
                                flex-basis 120px



                    
                .info
                    min-width 300px
                    flex 3 1 0%
                    height 600px


