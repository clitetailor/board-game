@import "styles.styl"

$tea-green = #c9da7b
$smooth-line = lighten(#111, 20)

.Entrance
    width 100%
    height 100%

    > .navbar
        position fixed
        left 0
        right 0
        top 0

        height 60px
        
        > .brand
            > .brand-typo
                margin-left 20px;

                position relative
                font-family 'Lobster 1.3'
                font-size 45px
                color $font-smooth
    
        
    > .outer-wrapper
        display flex
        flex-direction column
        align-items center
        justify-content space-between

        padding-top 60px
        width 100%
        height 100%
        
        > .content
            display flex
            justify-content center
            flex-flow row wrap

            min-width 800px

            > * > .card
                border 1px solid $smooth-line
                min-height 80px
                
            > .rooms
                min-width 300px
                flex 4 1 0%

                margin 12px
                
                > .card
                    width 100px
                    background white

            > .info
                min-width 300px
                flex 3 1 0%
                height 600px

                margin 12px

                > .card
                    background white


