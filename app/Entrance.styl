@import "styles.styl"
@import "index.styl"

$tea-green = #c9da7b
$smooth-line = lighten(#000, 75)

:local .Entrance :global
	width 100%
	height 100%

	.NavBar
		z-index 2
			
	.outer-wrapper
		display flex
		flex-direction column
		align-items center
		justify-content space-between

		padding-top 60px
		width 100%
		height 100%

		box-sizing border-box

		background gold
		overflow-y auto

		.content
			padding-left 10%
			padding-right 10%

			width 100%

			box-sizing border-box
			
			> *
				max-width 800px
				margin auto

			.top-control
					.card
							background white
							box-shadow  0 1px 3px white

							padding 20px
							margin 12px

							border-radius 8px

							display flex
							align-items center
							justify-content space-around

			.pallete
					display flex
					justify-content center
					flex-flow row wrap

					.card
							background white
							box-shadow 0 1px 3px white

							margin 12px
							padding 20px

							border-radius 8px
							
					.rooms
							min-width 300px
							flex 4 1 0%

							.room
									.banner
											display flex
											font-family Lato
											color $font-smooth

											margin-bottom 12px

											h3
													margin 0

											.room-id
													flex-basis 120px
									
									.action
											display flex
											justify-content flex-end

					.info
							flex 3 1 0%
							height 600px