@import './styles.styl'

$input-height = 48px
$input-width = 500px

LargeInput 
	background white
	width $input-width
	height $input-height
	margin-bottom 12px
	
	position relative
	background white

	border-radius $border-radius-small
	box-shadow $box-shadow-primary

	input, label
		position absolute
		top 8px
		bottom 8px
		left 30px
		right 30px

		font-family Lato
		font-size 20px

	label
		color $font-light
		background transparent
		font-weight normal

	input
		width $input-width - 440px
		background transparent
		
		color $font-smooth
		border none;
		outline none
		transition all ease-in-out $speed-rapid

		&:focus
			background white