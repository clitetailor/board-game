@import './styles'
@import 

$tea-green = #c9da7b

:local .SignUp :global
	.navbar
		position fixed
		left 0
		right 0
		top 0

		height 60px
		box-shadow $box-shadow-primary

		background gold

		z-index 2

		.brand
			.brand-typo
				margin-left 20px;

				position relative
				font-family 'Lobster 1.3'
				font-size 45px
				color $font-smooth

	.outer-wrapper
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		min-height 800px

		padding-top 60px;
		background gold

		display flex
		justify-content center
		align-items flex-start

		.signup-form
			padding-top 60px
			padding-bottom 60px

			padding-left 60px
			padding-right 60px

			margin-top 10%

			background white
			box-shadow 0 1px 3px white

			border-radius 8px

			form
				margin-bottom 0px

				.large-input
					margin-bottom 12px
	
	.footer
		border-top 1px solid #ddd
		height 120px