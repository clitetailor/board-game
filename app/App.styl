@import './device.styl'
@import './styles.styl'

$tea-green = #c9da7b

.App
	height 100%
	width 100%
	
	display flex
	flex-flow row nowrap
		
	.outer-wrapper
		display flex
		flex-flow column nowrap
		justify-content center

		/*
		$border-margin = 210px

		background linear-gradient(45deg, gold 0, gold ($border-margin - 10px), darken(gold, 10) $border-margin, transparent $border-margin), linear-gradient(225deg, gold 0, gold ($border-margin - 10px), darken(gold, 10) $border-margin, transparent $border-margin);
		
		background linear-gradient(270deg, darken(gold, 6) 0, darken(gold, 6) 40px, gold 10px)
		*/

		background gold
		border-right 10px dashed white

		flex 1 1 0
		height 100%
		
		box-shadow 0 5px 20px alpha(#000, 0.5)

		.nav-bar
			position absolute
			top 0px

			.brand-icon
				position relative
				margin-left 30px

				font-family "Lobster 1.3", 'Rochester', 'England Hand DB'
				font-size 60px
				color $font-smooth
				
				text-decoration underline

				/*
				&::after
					content "Chess.io"
					position absolute
					top 0
					left 0

					text-shadow $tea-green -5px 5px 0, gold -10px 10px 0
					text-decoration underline

					z-index -1
				*/

		.login-form
			position relative

			padding-top 40px
			padding-bottom 18px

			display flex
			justify-content center

			.button-group
				:not(:first-child)
					margin-left 20px

	.background
		display flex
		justify-content center
		align-items center

		flex 1 1 0
		height 100%
		overflow hidden

		z-index -1

		.background-image
			flex 0 0 auto
			height 100%