@import './styles.styl'

.entrance
	display flex

	width 100%
	height 100%

	.left
		display flex
		flex-flow column nowrap

		flex 1 1 60vw

		align-items center

		padding 60px

		.search-box
			margin-bottom 100px

		.rooms
			align-self stretch
			
			.room
				max-width 720px

				margin auto

				.line
					display flex
					align-items center
					
					.id
						flex 0 0 auto

						color #888

					.title
						margin-left 20px
						margin-right 20px
						flex 1 1 auto
					
					.large-button
						flex 0 0 auto
	
	.right
		flex 1 1 40vw

		padding 60px
		
		.form
			display flex
			flex-flow column nowrap
			
			justify-content center
			align-items center

			.line
				margin-bottom 30px
