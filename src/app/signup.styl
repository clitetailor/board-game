.signup
	display flex
	justify-content center
	align-items center

	width 100%
	height 100%

	background orange

	.form
		display flex
		flex-flow column nowrap

		padding 5px 10px

		.error
			display flex

			align-self center

			flex 1 1 30px
			justify-content center
			align-items center

			padding 5px
			margin-bottom 16px

			border-radius 5px
			background white
			
			color red
			font-weight bold
			font-size 18px
			font-family Lato

			visibility hidden
		
			&.visible
				visibility visible

		.line
			margin-bottom 10px

		.button-group
			display flex
			justify-content center

			margin-top 20px