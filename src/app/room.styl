.room
	width 100%
	height 100%
	
	.outer-wrapper
		display flex
		justify-content center

		position absolute
		top 0
		left 0
		right 0
		bottom 0

		width 100%
		height 100%

		padding-top 60px

		.padding
			flex 1 1 0

		.content
			display flex
			flex-flow column nowrap
			justify-content center

			flex 1 1 auto

			.players
				display flex
				justify-content space-between
				align-items center

				padding 10px

				padding-top 30px

				.player
					width 26em
					height 30em
					margin 10px

					display flex
					flex-flow column wrap

					padding 10px 24px

					background white
					
					.avatar
						display flex
						justify-content center
						align-items center

						padding-top 20px
						padding-bottom 5px

						img
							width 210px
							height 210px

							background #f8f8f8
							background-blend-mode color-burn
							background-size cover
							background-position center
							border-radius 50%

					
					.name
						display flex
						justify-content center

						color #666
						font-size 24px
						font-family Calibri, 'Trebuchet MS', sans-serif

						h4
							margin 10px auto
					
					.level
						display flex
						justify-content center
						align-items center

						flex 1 1 auto
						
						font-size 60px
						font-family Calibri, 'Trebuchet MS', sans-serif
						font-style italic

						h5
							margin 0

							.hightlight
								color orange
					
					.actions
						.eject
							background tomato

			.actions
				padding 10px
			
				display flex
				justify-content space-around

				margin 10px
				padding 20px 10px

				.invisible
					visibility hidden
		
		.actions
			align-items center
			justify-content center
			text-decoration none !important

			.start
				display flex
				justify-content center

				width 200px
				height 50px

				font-size 28px

			.start::after
				display block
				content ">>"

				width 0
				margin-left 0
				opacity 0

				transition width 0.4s, margin-left 0.4s, opacity 0.4s

			.start:hover::after

				width 20px
				margin-left 10px
				opacity 1
				
				transition width 0.4s, margin-left 0.4s, opacity 0.4s

	.control
		flex 1 1 auto

		width 16em
		height 100%
